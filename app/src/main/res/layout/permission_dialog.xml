<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="22dp"
    android:paddingHorizontal="11dp">

    <TextView
        android:id="@+id/permissionDialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:text="위치 권한 설정"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permissionDialog_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="11dp"
        android:includeFontPadding="false"
        app:layout_constraintHorizontal_bias="0"
        android:text="@string/need_permission"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permissionDialog_tv_title" />

    <TextView
        android:id="@+id/permissionDialog_tv_content_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/colorPrimary"
        android:paddingHorizontal="11dp"
        android:includeFontPadding="false"
        app:layout_constraintHorizontal_bias="0"
        android:text="셔틀위치 알리미 운전자용 앱은 백그라운드에서도 위치 정보를 전송할 수 있습니다. 따라서 위치 전송 시작 버튼을 클릭한 후, 다른 작업을 수행하는 것이 가능합니다."
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permissionDialog_tv_content" />

    <TextView
        android:id="@+id/permissionDialog_tv_content_locinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/colorPrimary"
        android:paddingHorizontal="11dp"
        android:includeFontPadding="false"
        app:layout_constraintHorizontal_bias="0"
        android:text="전송된 모든 위치 정보는 앱 종료 시 서버에서 즉시 삭제되며, 서비스 제공 이외의 목적으로 사용되지 않습니다."
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permissionDialog_tv_content_alert" />

    <TextView
        android:id="@+id/permissionDialog_btn_toSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="11dp"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:paddingStart="13dp"
        android:paddingTop="13dp"
        android:paddingBottom="11dp"
        android:text="설정으로 이동"
        android:textColor="@drawable/tv_d_buttontext_primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/permissionDialog_btn_cancel"
        app:layout_constraintTop_toTopOf="@id/permissionDialog_btn_cancel" />

    <TextView
        android:id="@+id/permissionDialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:paddingStart="13dp"
        android:paddingEnd="11dp"
        android:paddingTop="13dp"
        android:paddingBottom="11dp"
        android:text="취소"
        android:textColor="@drawable/tv_d_buttontext_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permissionDialog_tv_content_locinfo" />
</androidx.constraintlayout.widget.ConstraintLayout>